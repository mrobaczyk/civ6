		<Row UnitPromotion="PROMOTION_SPYGLASS_MELEE" PrereqUnitPromotion="PROMOTION_SCOUTING_REGIMENT_MELEE"/>
		<Row UnitPromotion="PROMOTION_ELITE_GUARD" PrereqUnitPromotion="PROMOTION_COMMANDO"/>

		<!-- Completely redefine PROMOTION_CLASS_RANGED prereqs -->
		<Delete UnitPromotion="PROMOTION_VOLLEY"/>
		<Delete UnitPromotion="PROMOTION_ARROW_STORM"/>
		<Delete UnitPromotion="PROMOTION_SUPPRESSION"/>
