		<Delete UnitPromotion="PROMOTION_CAPARISON"/>
		<Delete UnitPromotion="PROMOTION_COURSERS"/>
		<Delete UnitPromotion="PROMOTION_DOUBLE_ENVELOPMENT"/>
		<Delete UnitPromotion="PROMOTION_PURSUIT"/>
		<Delete UnitPromotion="PROMOTION_ESCORT_MOBILITY"/>

		<Row UnitPromotion="PROMOTION_CAPARISON" PrereqUnitPromotion="PROMOTION_COURSERS"/>
		<Row UnitPromotion="PROMOTION_PURSUIT" PrereqUnitPromotion="PROMOTION_CAPARISON"/>
		<Row UnitPromotion="PROMOTION_PURSUIT" PrereqUnitPromotion="PROMOTION_DOUBLE_ENVELOPMENT"/>
		<Row UnitPromotion="PROMOTION_PURSUIT" PrereqUnitPromotion="PROMOTION_ESCORT_MOBILITY"/>

		<!-- Completely redefine PROMOTION_CLASS_HEAVY_CAVALRY prereqs -->
		<Delete UnitPromotion="PROMOTION_CHARGE"/>
		<Delete UnitPromotion="PROMOTION_BARDING"/>
		<Delete UnitPromotion="PROMOTION_ROUT"/>
		<Delete UnitPromotion="PROMOTION_ARMOR_PIERCING"/>
		<Delete UnitPromotion="PROMOTION_REACTIVE_ARMOR"/>
		<Delete UnitPromotion="PROMOTION_BREAKTHROUGH"/>

		<Row UnitPromotion="PROMOTION_CHARGE"			PrereqUnitPromotion="PROMOTION_ROUT"/>
		<Row UnitPromotion="PROMOTION_REACTIVE_ARMOR"	PrereqUnitPromotion="PROMOTION_ARMOR_PIERCING"/>
		<Row UnitPromotion="PROMOTION_BREAKTHROUGH"		PrereqUnitPromotion="PROMOTION_BARDING"/>
		<Row UnitPromotion="PROMOTION_BREAKTHROUGH"		PrereqUnitPromotion="PROMOTION_CHARGE"/>
		<Row UnitPromotion="PROMOTION_BREAKTHROUGH"		PrereqUnitPromotion="PROMOTION_REACTIVE_ARMOR"/>

		<!-- Completely redefine PROMOTION_CLASS_ANTI_CAVALRY prereqs -->
		<Delete UnitPromotion="PROMOTION_ECHELON"/>
		<Delete UnitPromotion="PROMOTION_THRUST"/>
		<Delete UnitPromotion="PROMOTION_SCHILTRON"/>
		<Delete UnitPromotion="PROMOTION_REDEPLOY"/>
		<Delete UnitPromotion="PROMOTION_CHOKE_POINTS"/>
		<Delete UnitPromotion="PROMOTION_HOLD_THE_LINE"/>

		<Row UnitPromotion="PROMOTION_SCHILTRON"		PrereqUnitPromotion="PROMOTION_THRUST"/>
		<Row UnitPromotion="PROMOTION_HOLD_THE_LINE"	PrereqUnitPromotion="PROMOTION_ECHELON"/>
		<Row UnitPromotion="PROMOTION_CHOKE_POINTS"		PrereqUnitPromotion="PROMOTION_SCOUTING_REGIMENT_ANTI_CAVALRY"/>
		<Row UnitPromotion="PROMOTION_REDEPLOY"			PrereqUnitPromotion="PROMOTION_SCHILTRON"/>
		<Row UnitPromotion="PROMOTION_REDEPLOY"			PrereqUnitPromotion="PROMOTION_HOLD_THE_LINE"/>
		<Row UnitPromotion="PROMOTION_REDEPLOY"			PrereqUnitPromotion="PROMOTION_CHOKE_POINTS"/>

		<!-- Completely redefine PROMOTION_CLASS_SIEGE prereqs -->
		<Delete UnitPromotion="PROMOTION_GRAPE_SHOT"/>
