	<GraphQueries>
		<Row Query="GameDataSets" SQL="select DataSets.ObjectId, Datasets.Type, DataSetId from GameObjects inner join DataSets on GameObjects.ObjectId = DataSets.ObjectId where GameObjects.GameId=@GameId and DataSet=@DataSet" />
		<Row Query="GameDataSetsByType" SQL="select DataSets.ObjectId, Datasets.Type, DataSetId from GameObjects inner join DataSets on GameObjects.ObjectId = DataSets.ObjectId where GameObjects.Type=@ExtraData and GameObjects.GameId=@GameId and DataSet=@DataSet" />
		<Row Query="GameDeltaDataSetsByType" SQL="select DataSets.ObjectId, Datasets.Type, DataSetId, 1 as IsDelta from GameObjects inner join DataSets on GameObjects.ObjectId = DataSets.ObjectId where GameObjects.Type=@ExtraData and GameObjects.GameId=@GameId and DataSet=@DataSet" />
		<Row Query="PlayerDataSets" SQL="select DataSets.ObjectId, Datasets.Type, DataSetId from GameObjects inner join DataSets on GameObjects.ObjectId = DataSets.ObjectId where GameObjects.PlayerObjectId=@ObjectId and DataSet=@DataSet" />
		<Row Query="PlayerDataSetsByType" SQL="select DataSets.ObjectId, Datasets.Type, DataSetId from GameObjects inner join DataSets on GameObjects.ObjectId = DataSets.ObjectId where GameObjects.Type=@ExtraData and GameObjects.PlayerObjectId=@ObjectId and DataSet=@DataSet" />
		<Row Query="PlayerDeltaDataSetsByType" SQL="select DataSets.ObjectId, Datasets.Type, DataSetId, 1 as IsDelta from GameObjects inner join DataSets on GameObjects.ObjectId = DataSets.ObjectId where GameObjects.Type=@ExtraData and GameObjects.PlayerObjectId=@ObjectId and DataSet=@DataSet" />
	</GraphQueries>
	
